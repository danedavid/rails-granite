<!DOCTYPE html>
<html>
  <head>
    <title>Granite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= react_component "navigation/Navbarout", { name: @current_user.name }%>
    <% else %>
      <%= react_component "navigation/Navbarin" %>
    <% end %>

    <%= yield %>
  </body>
</html>
